script/source = "extends Sprite

var delay = 0.075
var rnd_delay = rand_range(0.2,1.0)
var velocity = 256.0
var color = randf()

func _process(delta):
	position += delta*Vector2(0,velocity)
	if delay>0.0:
		delay -= delta
		if delay<=0.0:
			var li = duplicate()
			if randf()<0.1:
				li.position = Vector2(get_parent().rect_size.x*randf(),-16*scale.x)
				li.velocity = rand_range(128.0,256.0)
				li.scale = rand_range(0.5,2.5)*Vector2(1,1)
				li.color = randf()
			else:
				li.position = position - Vector2(0,24*scale.x)
				li.velocity = velocity
				li.scale = scale
				li.color = color+0.05
			li.frame = randi()%(hframes*vframes)
			get_parent().add_child(li)
	rnd_delay -= delta
	if rnd_delay<=0.0:
		frame = randi()%(hframes*vframes)
		rnd_delay = rand_range(0.2,1.0)
	if position.y>get_parent().rect_size.y+32:
		queue_free()

func _ready():
	modulate = Color(0.4,0.5,1.0,0.75).linear_interpolate(Color(0.4,1.0,0.6,0.25),color)
"

